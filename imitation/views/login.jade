doctype html
html
  head
    meta(charset='UTF-8')
    title Login/Registration Form Transition
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans')
    link(rel='stylesheet', href='/stylesheets/login.css')
  body
    .cont
      form.form.sign-in(action='/login', method='POST')
        h2 Welcome back,
        label
          span Email
          input(type='email' name="email")
        label
          span Password
          input(type='password' name="password")
        p.forgot-pass Forgot password?
        button.submit Sign In
        button.fb-btn(type='button')
          | Connect with 
          span facebook
      .sub-cont
        .img
          .img__text.m--up
            h2 New here?
            p Sign up and discover great amount of new opportunities!
          .img__text.m--in
            h2 One of us?
            p If you already has an account, just sign in. We've missed you!
          .img__btn
            span.m--up Sign Up
            span.m--in Sign In
        form.form.sign-up(action='/signup', method='POST')
          h2 Time to feel like home,
          label
            span Name
            input(type='text' name="name")
          label
            span Email
            input(type='email' name="email" id="email")
          label
            span Password
            input(type='password' name="password")
          button.submit Sign Up
          button.fb-btn(type='button')
            | Join with 
            span facebook
    script(src='/javascripts/login.js')